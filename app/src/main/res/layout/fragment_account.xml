
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountLO"
    tools:context="choongyul.android.com.memoappp.AccountFragment"
    android:background="#ABA8BC"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/accountSearchBar"
        android:hint="검색"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="5dp"
        android:layout_below="@+id/accountTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="계좌 메모"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="74dp"
        tools:layout_editor_absoluteX="25dp"
        android:layout_alignRight="@+id/accountSearchBar"
        android:layout_alignEnd="@+id/accountSearchBar"
        android:layout_alignLeft="@+id/accountSearchBar"
        android:layout_alignStart="@+id/accountSearchBar"
        android:id="@+id/accountRecyclerView"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/accountSearchBar"
        android:layout_marginTop="15dp" />



</RelativeLayout>
