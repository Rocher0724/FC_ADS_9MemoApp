<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLO"
    tools:context="choongyul.android.com.memoappp.MainFragment"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/idSearchBar"
        android:hint="검색" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="74dp"
        tools:layout_editor_absoluteX="25dp"
        android:layout_above="@+id/btnId"
        android:layout_below="@+id/idSearchBar"
        android:layout_alignRight="@+id/idSearchBar"
        android:layout_alignEnd="@+id/idSearchBar"
        android:layout_alignLeft="@+id/idSearchBar"
        android:layout_alignStart="@+id/idSearchBar"
        android:id="@+id/recyclerID" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@android:drawable/ic_menu_more"
        android:layout_alignTop="@+id/idSearchBar"
        android:layout_alignRight="@+id/idSearchBar"
        android:id="@+id/btnIdSearchGo"
        android:layout_alignEnd="@+id/idSearchBar" />

    <Button
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnId"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnText"
        android:layout_toEndOf="@+id/btnText"
        android:layout_marginLeft="3dp" />

    <Button
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="add Memo"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMemo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <Button
        android:text="account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAccount"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnAddMemo"
        android:layout_toStartOf="@+id/btnAddMemo"
        android:layout_marginRight="3dp" />


</RelativeLayout>
