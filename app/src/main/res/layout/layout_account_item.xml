<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relatiACC"
    android:background="@drawable/rounded_edittext"
    android:padding="3dp"
    android:layout_marginBottom="5dp">


    <TextView
        android:text="textnick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNickname"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:text="textbank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/textBankName"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <TextView
        android:text="textaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAccountNumber"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/textNickname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="owner name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textOwnerName"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_alignBaseline="@+id/textAccountNumber"
        android:layout_alignBottom="@+id/textAccountNumber"
        android:layout_alignRight="@+id/textBankName"
        android:layout_alignEnd="@+id/textBankName" />

</RelativeLayout>
