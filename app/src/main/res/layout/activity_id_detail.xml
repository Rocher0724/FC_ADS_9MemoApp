<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_id_detail"
    tools:context="choongyul.android.com.memoappp.IdDetailActivity"
    android:background="#6c6b75">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/relati"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#aba8bc">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etBank"
            android:gravity="top"
            android:layout_below="@+id/textBANK"
            android:layout_alignLeft="@+id/textBANK"
            android:layout_alignStart="@+id/textBANK"
            android:hint="    ID"
            android:background="@drawable/rounded_edittext"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            />


        <TextView
            android:text="아이디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/textBANK"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/etNick"
            android:layout_alignLeft="@+id/etNick"
            android:layout_alignStart="@+id/etNick"/>

        <TextView
            android:text="Memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textBANK"
            android:layout_alignLeft="@+id/etNick"
            android:layout_alignStart="@+id/etNick"
            android:layout_marginTop="60dp"
            android:id="@+id/textAccount"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNick"
            android:gravity="top"
            android:hint="    주소"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:background="@drawable/rounded_edittext"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            />


        <TextView
            android:text="사이트 주소 , 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="ID 관리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etMemo"
            android:gravity="top"
            android:hint="   메모"
            android:background="@drawable/rounded_edittext"
            android:layout_height="match_parent"
            android:layout_below="@+id/textAccount"
            android:layout_alignLeft="@+id/textAccount"
            android:layout_alignStart="@+id/textAccount"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"/>
    </RelativeLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fabAddId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic50"
        style="@style/MenuButtonsSmall.Blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="36dp" />


</RelativeLayout>
